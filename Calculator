import java.io._

class Calculator {
	def add(x : Int, y : Int)  = x + y
	def subtract(x : Int, y : Int) = x - y
	def multiply(x : Int, y : Int) = x * y
	def divide(x : Int, y : Int) = x / y
	def modulus(x : Int, y : Int) = x % y
}

object Calculator {
	 def main(args: Array[String]) {
	 	println("1 for add, 2 for sub, 3 for mul, 4 for divide, 5 for modulus")
	 	println("Enter your choice :  ")
	 	val choice = readInt()
	 	println("Enter first number :  ")
	 	val first = readInt()
	 	println("Enter second number :  ")
	 	val second = readInt()
	 	val calculator = new Calculator()
	 	choice match {
	 		case 1 => println("addition " + calculator.add(first, second)) 
	 		case 2 => println("subtraction " + calculator.subtract(first, second)) 
	 		case 3 => println("multiply " + calculator.multiply(first, second)) 
	 		case 4 => println("divide " + calculator.divide(first, second)) 
	 		case 5 => println("modulus " + calculator.modulus(first, second)) 
	 		case whoa => println("Invalid input")
	 	}
	 }
}